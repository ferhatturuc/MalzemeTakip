@model MalzemeTakip.Models.ViewModels.EditMalzemeRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Malzeme Düzenle</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
            <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="Id" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Malzeme Adı</label>
            <input type="text" id="MalzemeName" class="form-control" asp-for="MalzemeName" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Güncelle</button>

                <button class="btn btn-danger ms-2" type="submit"
                        asp-area=""
                        asp-controller="Malzeme"
                        asp-action="Delete">
                    Sil
                </button>
            </div>

        </div>

    </form>
    }
    else
    {
        <p>Malzeme Bulunamadı!</p>
    }
</div>